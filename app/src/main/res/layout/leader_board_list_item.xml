<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <View
        android:id="@+id/green_divider_line_top"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/leader_board_position_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/position_start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/green_divider_line_top"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/leader_board_username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/username_start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/green_divider_line_top"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/leader_board_points_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/points_start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/green_divider_line_top"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/position_start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"/>

    <android.support.constraint.Guideline
        android:id="@+id/username_start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25"/>

    <android.support.constraint.Guideline
        android:id="@+id/points_start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"/>

</android.support.constraint.ConstraintLayout>